<Window
    x:Class="Notes_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Notes_App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Notes_App.MVVM.View"
    xmlns:viewModel="clr-namespace:Notes_App.MVVM.ViewModel"
    Title="Your Notes"
    Width="950"
    Height="650"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:Main_ViewModel />
    </Window.DataContext>
    <Border Background="#1F1F1F" CornerRadius="20">
        <Grid>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="137*" />
                <ColumnDefinition Width="43*" />

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>

                <RowDefinition Height="75" />
                <RowDefinition />

            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1">
                <RadioButton
                    Height="50"
                    Command="{Binding NewNoteCommand}"
                    Content="Home"
                    FontFamily="/Fonts/#PASTI"
                    FontSize="14"
                    Foreground="#c0c4cc"
                    IsChecked="True" />
            </StackPanel>
            <ContentControl
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="10,10,10,10">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModel:Main_ViewModel}">
                        <view:NewNotePage />
                    </DataTemplate>
                </ContentControl.Resources>
                <ContentControl.Content>
                    <ContentPresenter Margin="0,10,0,17" Content="{Binding CurrentView}" />
                </ContentControl.Content>
            </ContentControl>

        </Grid>

    </Border>

</Window>
